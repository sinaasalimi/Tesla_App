<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/Background_main"
  android:layout_marginBottom="10dp"
  android:id="@+id/cons">


  <ImageView
    android:id="@+id/img_downloads"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


  <TextView
    android:id="@+id/txt_downloads"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="0dp"
    android:text="hello world"
    android:textSize="20dp"
    app:layout_constraintBottom_toBottomOf="@+id/img_downloads"
    app:layout_constraintStart_toEndOf="@id/img_downloads"
    app:layout_constraintTop_toTopOf="@+id/img_downloads" />

</androidx.constraintlayout.widget.ConstraintLayout>